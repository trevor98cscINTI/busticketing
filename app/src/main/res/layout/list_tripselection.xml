<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="146dp"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            >


            <TextView
                android:id="@+id/tripBusID"
                android:layout_width="146dp"
                android:layout_height="59dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="11dp"
                android:text="Bus Name"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tripSeatTotalID"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="19dp"
                android:layout_marginBottom="18dp"
                android:text="Seats Remaining"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tripBoardingTimeID"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="12dp"
                android:text="Boarding Time"
                android:textSize="16dp"
                android:gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tripDestinationTimeID"
                android:layout_width="123dp"
                android:layout_height="19dp"
                android:layout_above="@+id/tripSeatTotalID"
                android:layout_alignStart="@+id/tripBoardingTimeID"
                android:layout_marginStart="-2dp"
                android:layout_marginBottom="-26dp"
                android:text="Destination Time"
                android:textSize="16dp"
                android:gravity="center"
                android:textAlignment="center"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>